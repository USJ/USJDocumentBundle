<div class="modal hide fade" id="doc-create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>        
        <h3>Add a document</h3>
    </div>
    <div class="modal-body">
        <div class="tabbable tabs-left">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#doc-upload-box" data-toggle="tab">Upload</a></li>
                <li><a href="#doc-search-box" data-toggle="tab">Search</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="doc-upload-box">
                    <form action="{{ path('mdb_document_document_new') }}" {{form_enctype(form) }} method="post">
                        <input type="hidden" name="object_id" value="{{ linkObject.id }}"/>
                        <input type="hidden" name="object_class" value="{{ linkObject.class }}"/>
                        {{ form_widget(form) }}
                        <input type="submit" class="btn" />
                    </form>
