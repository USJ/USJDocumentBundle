                        <input type="text" id="inputEmail" placeholder="Title" class="large" style="width:100%">
                        <textarea id="inputPassword" placeholder="any detail about your file..." style="width:100%"></textarea>
                        <div class="file-placeholder">
                            <button class="btn btn-info">Add Files</button>
                            <span> or simply drop your files on this box</span>
                        </div>
                    </form> -->
                   
                </div>
                <div class="tab-pane" id="doc-search-box">
                    <form class="form-search doc-search">
                        <div class="input-append">
                            <input type="text" class="span4 search-query" placeholder="Type here to start searching...">
                        </div>
                    </form>
                    <div id="doc-search-results"></div>
                </div>
            </div>
        </div> 
   </div>
   
</div>

<script type="text/template" id="search-results-template">
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rev.</th>
            </tr>
        </thead>
        <tbody>
            <% _.each(docs, function(doc) { %>
            <tr>
                <td><%= doc.title %></td>
                <td><%= doc.rev %></td>
                <td>
                    <a href="#" data-docid='<%= doc.id %>' class="add-doc-btn">Add</a>
                </td>
            </tr>
           <% }); %>
        </tbody>
    </table>
</script>